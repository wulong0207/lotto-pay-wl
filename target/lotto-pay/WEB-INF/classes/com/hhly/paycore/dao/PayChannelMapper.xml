<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhly.paycore.dao.PayChannelMapper">
	<resultMap id="BaseResultMap" type="com.hhly.skeleton.pay.channel.bo.PayChannelBO">
		<id column="ID" jdbcType="DECIMAL" property="id" />
		<result column="NAME" jdbcType="VARCHAR" property="name" />
		<result column="BANKID" jdbcType="DECIMAL" property="bankId" />
		<result column="TYPE" jdbcType="DECIMAL" property="type" />
		<result column="CARDTYPE" jdbcType="DECIMAL" property="cardType" />
		<result column="AVAILABLE" jdbcType="DECIMAL" property="available" />
		<result column="PAUSE" jdbcType="DECIMAL" property="pause" />
		<result column="BEGINTIME" jdbcType="TIMESTAMP" property="beginTime" />
		<result column="ENDTIME" jdbcType="TIMESTAMP" property="endTime" />
		<result column="PC" jdbcType="DECIMAL" property="pc" />
		<result column="H5" jdbcType="DECIMAL" property="h5" />
		<result column="ANDROID" jdbcType="DECIMAL" property="android" />
		<result column="IOS" jdbcType="DECIMAL" property="ios" />
		<result column="WECHAT" jdbcType="DECIMAL" property="wechat" />
		<result column="ORDER_ID" jdbcType="DECIMAL" property="orderId" />
		<result column="CODE" jdbcType="VARCHAR" property="code" />
		<result column="RATE" jdbcType="VARCHAR" property="rate" />
		<result column="CHARGE" jdbcType="VARCHAR" property="charge" />
		<result column="PAY_CHANNEL_MGR_ID" jdbcType="VARCHAR" property="payChannelMgrId" />
		<result column="APP_INVOKE_TYPE" jdbcType="DECIMAL" property="appInvokeType" />

	</resultMap>

	<!-- base_column中去掉了一些没用的参数CREATE_BY, MODIFY_BY, MODIFY_TIME, UPDATE_TIME, CREATE_TIME, -->
	<sql id="base_column">
		ID, NAME, BANKID, TYPE, CARDTYPE, AVAILABLE, PAUSE, BEGINTIME, ENDTIME, PC, H5, ANDROID, IOS, ORDER_ID,
		CODE,RATE,CHARGE,PAY_CHANNEL_MGR_ID,APP_INVOKE_TYPE,WECHAT
	</sql>


	<sql id="common_where">
		<trim prefix="where" prefixOverrides="and|or">
			<if test="bankId != null">
				AND BANKID = #{bankId}
			</if>
			<if test="available !=null">
				AND AVAILABLE = #{available}
			</if>
			<if test="pause !=null">
				AND PAUSE = #{pause}
			</if>
			<if test="endtime !=null">
				AND endtime = (select min(pc.endtime) from PAY_CHANNEL pc where pc.bankid = #{bankId})
			</if>
		</trim>
	</sql>

	<!-- 查询所有渠道 -->
	<select id="selectAll" resultMap="BaseResultMap">
		select
		<include refid="base_column" />
		from PAY_CHANNEL
	</select>

	<select id="selectByCondition" resultMap="BaseResultMap" parameterType="com.hhly.skeleton.pay.channel.vo.PayChannelVO">
		SELECT
		<include refid="base_column" />
		FROM
		PAY_CHANNEL
		<include refid="common_where" />
	</select>

	<select id="getChannelByBankId" resultMap="BaseResultMap">
		SELECT
		<include refid="base_column" />
		FROM PAY_CHANNEL WHERE BANKID = #{bankId} AND AVAILABLE =1 ORDER BY ORDER_ID DESC
	</select>


	<select id="getChannelById" resultMap="BaseResultMap">
		SELECT
		<include refid="base_column" />
		FROM PAY_CHANNEL WHERE ID = #{id} limit 1
	</select>

</mapper>